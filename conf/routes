# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

POST    /addCadeira/:disciplina/:periodo  controllers.Application.addCadeira(disciplina:String,periodo:Int)
POST    /remCadeira/:disciplina           controllers.Application.remCadeira(disciplina:String)
GET     /remCadeira/:disciplina           controllers.Application.remCadeira(disciplina:String)